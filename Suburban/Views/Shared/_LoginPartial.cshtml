@using Microsoft.AspNetCore.Identity
@using Suburban.Areas.Identity.Data

@inject SignInManager<SuburbanUser> SignInManager
@inject UserManager<SuburbanUser> UserManager


<ul class="navbar-nav">

  @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item" style=" margin-top: 6px; margin-right:10px; font-size: large; width:180px;">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello,  @((await UserManager.GetUserAsync(User)).FirstName)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark" style=" margin-top: 4px; font-size: large; color:white;">Logout</button>
                </form>
            </li>
        }
</ul>        
 