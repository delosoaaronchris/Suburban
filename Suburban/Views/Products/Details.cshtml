@model Suburban.Models.Product

@{
    ViewData["Title"] = "Details";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> Suburban: Create Product</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b2ce28006a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/CRUD.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/loginform.css">

</head>

<body>

    <div class="card create-container crud-table">
        <div class="card-header container-header">
            <h3 class="text-uppercase">Product Details</h3>
        </div>
        <div class="card-body">

            <dl class="row">

                <dt class="col-sm-2" style="text-align:right;">
                   

                </dt>
                <dd class="col-sm-10">
                    <img src="~/Uploads/@Model.ProductImage" class="img-thumbnail" height="300" width="300" asp-append-version="true" />
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                 
                <dt class="col-sm-2"  style="font-size: 16px;">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>

            </dl>
            <div class="btn-formgroup">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm create-btn">Edit</a>
                <a asp-action="Index" class="btn btn-sm back-btn">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
