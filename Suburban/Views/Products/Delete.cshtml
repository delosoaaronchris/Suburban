@model Suburban.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title> Suburban: Create Product</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b2ce28006a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/CRUD.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/loginform.css">


</head>
<body>

    <div class="card create-container crud-table">
        <div class="card-header alert alert-danger">
            <h3 class="text-uppercase">Are you sure you want to delete this?</h3>
        </div>
        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-2" >
                    @Html.DisplayFor(model => model.ProductPicture)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/Uploads/@Model.ExistingImage" class="img-thumbnail" height="200" width="200" asp-append-version="true" />
                </dd>

                <dt class="col-sm-2" style="text-align:right;" >
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-2" style="text-align:right;">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>

                <dt class="col-sm-2" style="font-size: 16px;">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete" class="btn-formgroup">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-sm create-btn">Delete</button>
                <a asp-action="Index" class="btn btn-sm back-btn">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>
